  <swiper-item> <image mode="widthFix" src="../../image/img1.jpg"> </image> </swiper-item>
  <swiper-item> <image mode="widthFix" src="../../image/img2.jpg"> </image> </swiper-item>
  <swiper-item> <image mode="widthFix" src="../../image/img3.jpg"> </image> </swiper-item>
</swiper>
